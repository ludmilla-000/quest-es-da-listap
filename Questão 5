#include <stdio.h>
#include <stdlib.h>
#include <locale.h>


int num;

int main() {
  setlocale(LC_ALL,"Portuguese_Brazil");
  
  printf("Digite um número: ");
  scanf("%d", &num);
  
  if(num <= 1) {
    printf("O Número digitado é Negativo!");
    
  } else if(num >= 1) {
    printf("O Número digitado é Positivo!");
    
    return 0;
  }
}
